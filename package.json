{
  "name": "bluewhale-ui",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whale-org/whale-ui.git"
  },
  "scripts": {
    "build-js": "tsc -p .",
    "prepare": "npm run build",
    "start": "npm run build -- -w",
    "build": "npm run build-js && npm run build-sass-to-css && npm run copy-css-to-lib",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "styleguide": "npm-run-all -p watch-sass-to-css styleguidist",
    "styleguidist": "styleguidist server",
    "styleguide-build": "styleguidist build",
    "deploy-docs": "npm run styleguide-build && gh-pages -d styleguide",
    "copy-css-to-lib": "npm-run-all -s copy-base-css copy-component-css",
    "copy-base-css": "cpx \"./src/**/*.css\" ./lib/",
    "copy-component-css": "cpx \"./src/components/**/*.css\" ./lib/components",
    "build-sass-to-css": "node-sass-chokidar src/ -o src/",
    "watch-sass-to-css": "node-sass-chokidar src/ -o src/ --watch --recursive"
  },
  "main": "lib",
  "types": "lib",
  "devDependencies": {
    "@types/react": "^16.4.6",
    "async-foreach": "^0.1.3",
    "cpx": "^1.5.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  }
}
